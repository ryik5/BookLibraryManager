<Window x:Class="LibraryManager.Views.ApplicationView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:model="clr-namespace:LibraryManager.Models"
        xmlns:local="clr-namespace:LibraryManager.ViewModels"
        xmlns:view="clr-namespace:LibraryManager.Views" xmlns:models="clr-namespace:LibraryManager.Models" d:DataContext="{d:DesignInstance Type=models:StatusBarModel}"
        mc:Ignorable="d"
        Title="The Library Manager"
        Height="600" Width="850"
        Style="{StaticResource BookLibraryWindowStyle}">

    <Window.Resources>
        <DataTemplate DataType="{x:Type local:MainViewModel}">
            <view:MainView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type local:FindBookViewModel}">
            <view:FindBookView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type local:AboutViewModel}">
            <view:AboutView />
        </DataTemplate>

    </Window.Resources>

    <DockPanel LastChildFill="True">

        <view:StatusBarControl DataContext="{Binding StatusBar}" DockPanel.Dock="Bottom" Height="28" Margin="2"/>

        <Grid DockPanel.Dock="Left" Margin="0 5 0 0" Width="80" Background="{StaticResource ColorSet6}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <ItemsControl ItemsSource="{Binding PageViewModels}" Grid.Row="0">

                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Content="{Binding Key}" Style="{StaticResource ButtonMainMenuStyle}"
                                Command="{Binding DataContext.ChangePageCommand, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                                CommandParameter="{Binding Value.Name}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                
            </ItemsControl>

            <Border Margin="0 15 0 0" Width="70" BorderThickness="0" Padding="10 15 0 0" Grid.Row="1" VerticalAlignment="Top"
                Style="{DynamicResource ControlBorderStyle}" 
                Background="{DynamicResource ColorSet6}">
                
            </Border>
        </Grid>

        <!-- Content current view  -->        
        <ContentControl Content="{Binding CurrentViewModel}" />

    </DockPanel>

</Window>
