<UserControl x:Class="LibraryManager.Views.BookView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:view="clr-namespace:LibraryManager.Views"
             mc:Ignorable="d" >

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="Author"/>
        <Border Grid.Row="0" Grid.Column="1" Style="{DynamicResource TextBoxBorderStyle}">
            <TextBox Text="{Binding Book.Author}" MinWidth="200" Height="26" />
        </Border>

        <Label Grid.Row="1" Grid.Column="0" Content="Title"/>
        <Border Grid.Row="1" Grid.Column="1" Style="{DynamicResource TextBoxBorderStyle}">
            <TextBox Text="{Binding Book.Title}" MinWidth="200" Height="26" />
        </Border>

        <Label Grid.Row="2" Grid.Column="0" Content="Pages"/>
        <Border Grid.Row="2" Grid.Column="1" Style="{DynamicResource TextBoxBorderStyle}">
            <TextBox Text="{Binding Book.TotalPages}" MinWidth="200" Height="26" />
        </Border>

        <Label Grid.Row="3" Grid.Column="0" Content="Publish Date"/>
        <Border Grid.Row="3" Grid.Column="1" Style="{DynamicResource TextBoxBorderStyle}">
            <TextBox Text="{Binding Book.PublishDate}" MinWidth="200" Height="26" />
        </Border>
        
        <Label Grid.Row="4" Grid.Column="0" Content="Description"/>
        <Border Grid.Row="4" Grid.Column="1" Style="{DynamicResource TextBoxBorderStyle}">
            <TextBox Text="{Binding Book.Description}" MinWidth="200" Height="26"/>
        </Border>

        <Label Grid.Row="5" Grid.Column="0" Content="Content"/>
        <view:BookViewControls Grid.Row="5" Grid.Column="1"/>

        <Label Grid.Row="6" Grid.Column="0" Content="Genre"/>
        <Border Grid.Row="6" Grid.Column="1" Style="{DynamicResource TextBoxBorderStyle}">
            <TextBox Text="{Binding Book.Genre}" MinWidth="200" Height="26"/>
        </Border>

        <Label Grid.Row="7" Grid.Column="0" Content="ISDN"/>
        <Border Grid.Row="7" Grid.Column="1" Style="{DynamicResource TextBoxBorderStyle}">
            <TextBox Text="{Binding Book.ISDN}" MinWidth="200" Height="26"/>
        </Border>

    </Grid>
</UserControl>
