<Window x:Class="LibraryManager.Views.LibraryMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:view="clr-namespace:LibraryManager.Views"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}"
        Height="400" Width="450"
        Style="{StaticResource WindowStyle}"
        WindowStartupLocation="CenterOwner">

    <Grid Background="{StaticResource ColorSet6}">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <TextBlock Text="{Binding MessageBlock}"/>

        <view:TwoButtonsPanel Grid.Row="1" Padding="5 0 5 0"/>

    </Grid>
</Window>
