<Window x:Class="AppBookManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppBookManager"
        mc:Ignorable="d"
        Title="An example of a test use of the Book Manager plugin    @YR"
        Height="600" Width="800">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5 5 5 5"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="39"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center">
            <Button x:Name="ButtonNew" Content="New Library"/>
            <Button x:Name="ButtonLoader" Content="Load Library"/>
            <Button x:Name="ButtonAdd" Content="Add Book"/>
            <Button x:Name="ButtonAddRandom" Content="Add random 10 books"/>
            <Button x:Name="ButtonDelete" Content="Delete Book"/>
            <Button x:Name="ButtonSort" Content="Sort Library"/>
            <Button x:Name="ButtonFind" Content="Find Book"/>
            <Button x:Name="ButtonSaver" Content="Save Library"/>
        </StackPanel>
        <ScrollViewer  Grid.Row="1" Name="MyScrollViewer" Margin="5" HorizontalAlignment="Stretch" VerticalAlignment="Top">
            <TextBlock x:Name="TextLog" TextWrapping="Wrap"/>
        </ScrollViewer>
    </Grid>
</Window>
