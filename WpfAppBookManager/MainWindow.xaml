<Window x:Class="AppBookManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:view="clr-namespace:BookLibraryManager.TestApp.View"
        mc:Ignorable="d"
        Title="The Demo app shows using of the Book Library plugin    @YR"
        Height="600" Width="850">

    <Grid x:Name="gridMainView">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="{Binding LibraryViewHeight}"/>
            <RowDefinition Height="{Binding LogViewHeight}"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <view:LibraryControls HorizontalAlignment="Stretch" Margin="5 5 0 0"/>

        <view:LibraryView Grid.Row="1" DataContext="{Binding Library}" VerticalAlignment="Top" VerticalContentAlignment="Top" Margin="5 0 0 0"/>

        <view:LogView Grid.Row="2" Margin="5" Padding="5 0 0 5"/>

        <view:StatusBarControl Grid.Row="3" VerticalContentAlignment="Stretch"
                               DataContext="{Binding StatusBarItems, NotifyOnSourceUpdated=True, UpdateSourceTrigger=PropertyChanged}"
                                />

    </Grid>
</Window>
