<Window x:Class="AppBookManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:view="clr-namespace:BookLibraryManager.TestApp.View"
        mc:Ignorable="d"
        Title="An example of a test use of the Book Manager plugin    @YR"
        Height="600" Width="800">

    <Grid x:Name="gridMainView">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="130"/>
        </Grid.RowDefinitions>

        <view:LibraryControlButtonsView HorizontalContentAlignment="Left" Margin="2" Padding="5 5 0 0"/>

        <view:LibraryView Grid.Row="1" DataContext="{Binding Library}" VerticalAlignment="Top" VerticalContentAlignment="Top" Margin="5 0 0 0"/>

        <view:LogView Grid.Row="2" Margin="5" Padding="5 0 0 5"/>

    </Grid>
</Window>
