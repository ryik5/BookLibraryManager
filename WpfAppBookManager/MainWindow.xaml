<Window x:Class="AppBookManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppBookManager"
        mc:Ignorable="d"
        Title="An example of a test use of the Book Manager plugin"
        Height="600" Width="800">

    <Window.CommandBindings>
        <CommandBinding Command="ApplicationCommands.New" Executed="NewCommand_Executed" CanExecute="NewCommand_CanExecute" />
        <CommandBinding Command="ApplicationCommands.Open" Executed="LoadCommand_Executed" CanExecute="LoadCommand_CanExecute" />
        <CommandBinding Command="ApplicationCommands.Paste" Executed="AddCommand_Executed" CanExecute="AddCommand_CanExecute" />
        <CommandBinding Command="ApplicationCommands.Save" Executed="SaveCommand_Executed" CanExecute="SaveCommand_CanExecute" />
        <CommandBinding Command="ApplicationCommands.Find" Executed="SortCommand_Executed" CanExecute="SortCommand_CanExecute" />
        <CommandBinding Command="ApplicationCommands.Delete" Executed="DeleteCommand_Executed" CanExecute="DeleteCommand_CanExecute" />
        <CommandBinding Command="ApplicationCommands.Redo" Executed="AddRandomCommand_Executed" CanExecute="AddRandomCommand_CanExecute" />
    </Window.CommandBindings>
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5 5 5 5"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="39"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center">
            <Button x:Name="ButtonNew" Command="ApplicationCommands.New" Content="New Library"/>
            <Button x:Name="ButtonLoader" Command="ApplicationCommands.Open" Content="Load Library"/>
            <Button x:Name="ButtonAdd" Command="ApplicationCommands.Paste" Content="Add Book"/>
            <Button x:Name="ButtonAddRandom" Command="ApplicationCommands.Redo" Content="Add random 10 books"/>
            <Button x:Name="ButtonDelete" Command="ApplicationCommands.Delete" Content="Delete Book"/>
            <Button x:Name="ButtonSort" Command="ApplicationCommands.Find" Content="Sort Library"/>
            <Button x:Name="ButtonSaver" Command="ApplicationCommands.Save" Content="Save Library"/>
        </StackPanel>
        <ScrollViewer  Grid.Row="1" Name="MyScrollViewer" Margin="5" HorizontalAlignment="Stretch" VerticalAlignment="Top">
            <TextBlock x:Name="TextLog" TextWrapping="Wrap"/>
        </ScrollViewer>
    </Grid>
</Window>
