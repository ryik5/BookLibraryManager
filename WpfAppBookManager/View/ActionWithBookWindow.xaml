<Window x:Class="BookLibraryManager.TestApp.View.ActionWithBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:view="clr-namespace:BookLibraryManager.TestApp.View"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}"
        Height="400" Width="450"
        Style="{StaticResource BookLibraryWindowStyle}"
        Background="#DDDDDD"
        WindowStartupLocation="CenterOwner">

    <Grid HorizontalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <view:BookView />

        <view:ExecuteCancelPanelView Grid.Row="2" Padding="0 5 0 15"/>
        
    </Grid>
</Window>
