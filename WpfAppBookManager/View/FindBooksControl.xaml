<UserControl x:Class="BookLibraryManager.TestApp.View.FindBooksControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookLibraryManager.TestApp.View"
             mc:Ignorable="d">
    <DockPanel LastChildFill="True" HorizontalAlignment="Left" VerticalAlignment="Center">
        <Button DockPanel.Dock="Right" Content="Close window" Command="{Binding CloseWindowCommand}" Width="90" Margin="20 5 5 5"/>
        <Button DockPanel.Dock="Right" Content="Delete Book" Command="{Binding DeleteSelectedBookCommand}" Width="90" Margin="15 5 5 5"/>
        <ComboBox DockPanel.Dock="Right" ItemsSource="{Binding SearchFields}" SelectedItem="{Binding SelectedSearchField}" Width="100" Margin="5"/>
        <CheckBox DockPanel.Dock="Right" Content="Search-on-fly" IsChecked="{Binding SearchOnFly}" Margin="5" VerticalContentAlignment="Center"/>
        <Button DockPanel.Dock="Right" Content="Find" Command="{Binding FindBooksCommand}" Width="50" Margin="5"/>
        <TextBox DockPanel.Dock="Left" MinWidth="100" Margin="5" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged, NotifyOnTargetUpdated=True}" />
    </DockPanel>
</UserControl>
