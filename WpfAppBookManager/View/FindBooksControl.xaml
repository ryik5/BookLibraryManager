<UserControl x:Class="BookLibraryManager.TestApp.View.FindBooksControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookLibraryManager.TestApp.View"
             mc:Ignorable="d">

    <DockPanel LastChildFill="True" HorizontalAlignment="Left" VerticalAlignment="Center">
        <Border DockPanel.Dock="Right" Style="{DynamicResource ButtonBorderStyle}" Margin="20 5 5 5">
            <Button Content="Close window" Command="{Binding CloseWindowCommand}" Width="90"/>
        </Border>
        <Border DockPanel.Dock="Right" Style="{DynamicResource ButtonBorderStyle}" Margin="15 5 5 5">
            <Button Content="Delete Book" Command="{Binding RemoveBookCommand}" Width="90"/>
        </Border>
        
        <ComboBox DockPanel.Dock="Right" ItemsSource="{Binding SearchFields}" SelectedItem="{Binding SelectedSearchField}" Width="100" Margin="5"/>
        
        <CheckBox DockPanel.Dock="Right" Content="Search-on-fly" IsChecked="{Binding SearchOnFly}" Margin="5" VerticalContentAlignment="Center"/>
        
        <Border DockPanel.Dock="Right" Style="{DynamicResource ButtonBorderStyle}" Width="50" Margin="5">
            <Button Content="Find" Command="{Binding FindBooksCommand}"/>
        </Border>
        <Border DockPanel.Dock="Left" Style="{DynamicResource TextBoxBorderStyle}" MinWidth="100" Margin="10 5 5 5">
            <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged, NotifyOnTargetUpdated=True}"
                    HorizontalAlignment="Stretch" />
        </Border>
    </DockPanel>
</UserControl>
