<UserControl x:Class="BookLibraryManager.TestApp.View.LibraryControls"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookLibraryManager.TestApp.View"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/View/Styles/ControlStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Border BorderBrush="DarkGray" Background="#E3E3E3" BorderThickness="1" CornerRadius="5" Margin="5">
        <Menu Background="Transparent" HorizontalContentAlignment="Stretch">
            <MenuItem Header="New Library" Command="{Binding ButtonNew}" />
            <MenuItem Header="Load Library" Command="{Binding ButtonLoader}"/>
            <MenuItem Header="Add Book" Command="{Binding ButtonAdd}"/>
            <MenuItem Header="Add random 10 books" Command="{Binding ButtonAddRandom}"/>
            <MenuItem Header="Delete Book" Command="{Binding ButtonDelete}"/>
            <MenuItem Header="Sort Library" Command="{Binding ButtonSort}"/>
            <MenuItem Header="Find Book" Command="{Binding ButtonFind}"/>
            <MenuItem Header="Save Library" Command="{Binding ButtonSaver}"/>
            <Separator />
            <MenuItem Header="Exit" Command="{Binding ExitCommand}" BorderThickness="0"/>
        </Menu>
    </Border>
</UserControl>
